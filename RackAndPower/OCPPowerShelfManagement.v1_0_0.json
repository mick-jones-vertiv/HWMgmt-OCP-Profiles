{
    "SchemaDefinition": "RedfishInteroperabilityProfile.v1_5_0",
    "ProfileName": "OCP Power Shelf Management",
    "ProfileVersion": "1.0.0",
    "Purpose": "Specifies the OCP management requirements for the Redfish interface on OCP power shelves.",
    "OwningEntity": "Open Compute Project",
    "ContactInfo": "michael.raineri@dell.com",
    "RequiredProfiles": {
        "OCPBaselineHardwareManagement": {
            "MinVersion": "1.0.1"
        }
    },
    "Resources": {
        "Chassis": {
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}"
            ],
            "PropertyRequirements": {
                "ChassisType": {},
                "EnvironmentMetrics": {},
                "Links": {
                    "PropertyRequirements": {
                        "ManagedBy": {},
                        "PowerDistribution": {}
                    }
                },
                "Manufacturer": {},
                "Model": {},
                "PartNumber": {},
                "PowerState": {},
                "PowerSubsystem": {},
                "Sensors": {},
                "SerialNumber": {},
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                },
                "ThermalSubsystem": {},
                "UUID": {},
                "Version": {}
            }
        },
        "EnvironmentMetrics": {
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}/EnvironmentMetrics"
            ],
            "PropertyRequirements": {
                "PowerWatts": {},
                "TemperatureCelsius": {}
            }
        },
        "PowerSubsystem": {
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}/PowerSubsystem"
            ],
            "PropertyRequirements": {
                "CapacityWatts": {},
                "PowerSupplies": {},
                "PowerSupplyRedundancy": {
                    "ReadRequirement": "IfImplemented"
                },
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                }
            }
        },
        "PowerSupply": {
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}/PowerSubsystem/PowerSupplies/{PowerSupplyId}"
            ],
            "PropertyRequirements": {
                "EfficiencyRatings": {
                    "ReadRequirement": "Recommended"
                },
                "FirmwareVersion": {},
                "InputNominalVoltageType": {},
                "InputRanges": {
                    "ReadRequirement": "Recommended"
                },
                "LineInputStatus": {},
                "Location": {
                    "PropertyRequirements": {
                        "PartLocation": {
                            "PropertyRequirements": {
                                "LocationOrdinalValue": {},
                                "LocationType": {},
                                "Orientation": {},
                                "Reference": {},
                                "ServiceLabel": {}
                            }
                        }
                    }
                },
                "LocationIndicatorActive": {
                    "ReadRequirement": "Mandatory",
                    "WriteRequirement": "Mandatory"
                },
                "Manufacturer": {},
                "Metrics": {},
                "Model": {},
                "OutputRails": {},
                "PartNumber": {},
                "PowerCapacityWatts": {},
                "PowerSupplyType": {},
                "ProductionDate": {},
                "SerialNumber": {},
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                },
                "Version": {}
            }
        },
        "PowerSupplyMetrics": {
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}/PowerSubsystem/PowerSupplies/{PowerSupplyId}/Metrics"
            ],
            "PropertyRequirements": {
                "FanSpeedsPercent": {
                    "ReadRequirement": "IfImplemented"
                },
                "InputCurrentAmps": {},
                "InputPowerWatts": {},
                "InputVoltage": {},
                "OutputPowerWatts": {},
                "RailCurrentAmps": {},
                "RailPowerWatts": {},
                "RailVoltage": {},
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                },
                "TemperatureCelsius": {}
            }
        },
        "ThermalSubsystem": {
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}/ThermalSubsystem"
            ],
            "PropertyRequirements": {
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                },
                "ThermalMetrics": {}
            }
        },
        "ThermalMetrics": {
            "URIs": [
                "/redfish/v1/Chassis/{ChassisId}/ThermalSubsystem/ThermalMetrics"
            ],
            "PropertyRequirements": {
                "TemperatureReadingsCelsius": {},
                "TemperatureSummaryCelsius": {
                    "PropertyRequirements": {
                        "Ambient": {},
                        "Internal": {}
                    }
                }
            }
        },
        "PowerEquipment": {
            "URIs": [
                "/redfish/v1/PowerEquipment"
            ],
            "PropertyRequirements": {
                "PowerShelves": {}
            }
        },
        "PowerDistribution": {
            "URIs": [
                "/redfish/v1/PowerEquipment/PowerShelves/{PowerDistributionId}"
            ],
            "PropertyRequirements": {
                "Branches": {},
                "EquipmentType": {
                    "Comparison": "Equal",
                    "Values": [
                        "PowerShelf"
                    ]
                },
                "FirmwareVersion": {},
                "Links": {
                    "PropertyRequirements": {
                        "Chassis": {},
                        "ManagedBy": {}
                    }
                },
                "LocationIndicatorActive": {
                    "ReadRequirement": "Mandatory",
                    "WriteRequirement": "Mandatory"
                },
                "Mains": {},
                "MainsRedundancy": {
                    "ReadRequirement": "IfImplemented"
                },
                "Manufacturer": {},
                "Metrics": {},
                "Model": {},
                "Outlets": {
                    "ReadRequirement": "IfImplemented"
                },
                "PartNumber": {},
                "ProductionDate": {},
                "SerialNumber": {},
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                },
                "UUID": {},
                "Version": {}
            }
        },
        "PowerDistributionMetrics": {
            "URIs": [
                "/redfish/v1/PowerEquipment/PowerShelves/{PowerDistributionId}/Metrics"
            ],
            "PropertyRequirements": {
                "PowerWatts": {},
                "EnergykWh": {},
                "TemperatureCelsius": {},
                "PowerLoadPercent": {}
            },
            "ActionRequirements": {
                "ResetMetrics": {}
            }
        },
        "Circuit": {
            "URIs": [
                "/redfish/v1/PowerEquipment/PowerShelves/{PowerDistributionId}/Mains/{CircuitId}",
                "/redfish/v1/PowerEquipment/PowerShelves/{PowerDistributionId}/Branches/{CircuitId}"
            ],
            "PropertyRequirements": {
                "BreakerState": {
                    "ReadRequirement": "IfImplemented"
                },
                "CircuitType": {},
                "CurrentAmps": {},
                "ElectricalContext": {},
                "ElectricalConsumerNames": {
                    "ReadRequirement": "Recommended",
                    "WriteRequirement": "IfImplemented"
                },
                "ElectricalSourceManagerURI": {
                    "ReadRequirement": "Recommended",
                    "WriteRequirement": "IfImplemented"
                },
                "ElectricalSourceName": {
                    "ReadRequirement": "Recommended",
                    "WriteRequirement": "IfImplemented"
                },
                "FrequencyHz": {},
                "NominalVoltage": {},
                "Links": {
                    "PropertyRequirements": {
                        "Outlets": {
                            "ReadRequirement": "Conditional",
                            "ConditionalRequirements": [
                                {
                                    "CompareProperty": "CircuitType",
                                    "CompareType": "Equal",
                                    "CompareValues": [
                                        "Branch"
                                    ],
                                    "ReadRequirement": "Mandatory"
                                }
                            ]
                        },
                        "PowerOutlet": {
                            "ReadRequirement": "Conditional",
                            "ConditionalRequirements": [
                                {
                                    "CompareProperty": "CircuitType",
                                    "CompareType": "Equal",
                                    "CompareValues": [
                                        "Mains"
                                    ],
                                    "ReadRequirement": "Mandatory"
                                }
                            ]
                        },
                        "SourceCircuit": {
                            "ReadRequirement": "Conditional",
                            "ConditionalRequirements": [
                                {
                                    "CompareProperty": "CircuitType",
                                    "CompareType": "Equal",
                                    "CompareValues": [
                                        "Mains"
                                    ],
                                    "ReadRequirement": "Mandatory"
                                }
                            ]
                        }
                    }
                },
                "PhaseWiringType": {},
                "PowerWatts": {},
                "RatedCurrentAmps": {},
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                },
                "Voltage": {},
                "VoltageType": {}
            }
        },
        "Outlet": {
            "ReadRequirement": "IfImplemented",
            "URIs": [
                "/redfish/v1/PowerEquipment/PowerShelves/{PowerDistributionId}/Outlets/{OutletId}"
            ],
            "PropertyRequirements": {
                "CurrentAmps": {},
                "ElectricalConsumerNames": {
                    "ReadRequirement": "Recommended",
                    "WriteRequirement": "IfImplemented"
                },
                "ElectricalContext": {},
                "FrequencyHz": {},
                "Links": {
                    "PropertyRequirements": {
                        "BranchCircuit": {}
                    }
                },
                "NominalVoltage": {},
                "OutletType": {},
                "PhaseWiringType": {},
                "PowerState": {},
                "PowerWatts": {},
                "RatedCurrentAmps": {},
                "Status": {
                    "PropertyRequirements": {
                        "Health": {},
                        "State": {}
                    }
                },
                "Voltage": {},
                "VoltageType": {}
            }
        }
    }
}
